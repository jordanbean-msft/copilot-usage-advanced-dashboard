{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "environmentName": {
        "value": "${AZURE_ENV_NAME}"
      },
      "location": {
        "value": "${AZURE_LOCATION}"
      },
      "cpuAdUpdaterExists": {
        "value": "${SERVICE_CPUADUPDATER_RESOURCE_EXISTS=false}"
      },
      "elasticSearchExists": {
        "value": "${SERVICE_ELASTICSEARCH_RESOURCE_EXISTS=false}"
      },
      "grafanaExists": {
        "value": "${SERVICE_GRAFANA_RESOURCE_EXISTS=false}"
      },
      "cpuAdUpdaterDefinition": {
        "value": {
          "settings": [
            {
              "name": "LOG_PATH",
              "value": "logs"
            },
            {
              "name": "EXECUTION_INTERVAL",
              "value": "1"
            },
            {
              "name": "ELASTICSEARCH_URL",
              "value": "http://elastic-search:80"
            },
            {
              "name": "ORGANIZATION_SLUGS",
              "value": "${GITHUB_ORGANIZATION_SLUGS}"
            },
            {
              "name": "GITHUB_PAT",
              "value": "${GITHUB_PAT}",
              "secret": true
            },
            {
              "name": "GRAFANA_TOKEN",
              "value": "${GRAFANA_TOKEN}",
              "secret": true
            }
          ]
        }
      },
      "elasticSearchDefinition": {
        "value": {
          "settings": [
            {
              "name": "xpack.security.enabled",
              "value": "false"
            },
            {
              "name": "ES_JAVA_OPTS",
              "value": "-Xms4g -Xmx4g"
            }
          ]
        }
      },
      "grafanaDefinition": {
        "value": {
          "settings": [
            {
              "name": "GF_LOG_LEVEL",
              "value": "debug"
            },
            {
              "name": "GF_SECURITY_ADMIN_USER__FILE",
              "value": "/run/secrets/admin_user"
            },
            {
              "name": "GF_SECURITY_ADMIN_PASSWORD__FILE",
              "value": "/run/secrets/admin_password"
            }
          ]
        }
      },
      "principalId": {
        "value": "${AZURE_PRINCIPAL_ID}"
      }
    }
}
